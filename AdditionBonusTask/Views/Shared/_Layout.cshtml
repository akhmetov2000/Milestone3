@using Microsoft.AspNetCore.Identity
@using AdditionBonusTask.Areas.Identity.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AdditionBonusTask</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/style.css"/>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" /> @*material-ui/core*@

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />

  
</head>
<body style="background: url(https://i.pinimg.com/originals/3b/8a/d2/3b8ad2c7b1be2caf24321c852103598a.jpg) no-repeat center center fixed;  background-size:cover;">
    <header class="header">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-3" style="background-color:dodgerblue;">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">KZ-MESSENGER</a>
                @*<button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>*@
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse" >
                    <partial name="_LoginPartial.cshtml" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        @if (SignInManager.IsSignedIn(User))
        {
            <div class="row">
                <div class="col-3">
                    <div class="card">
                        <div class="card-title">
                            <div style="display:flex; align-items:center; padding:10px">
                                <img src="https://image.freepik.com/free-vector/businessman-character-avatar-isolated_24877-60111.jpg" alt="Alternate Text" style="vertical-align:middle; width:50px; height:50px; border-radius:50% " />
                                <a id="manage" class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index"><h4>@UserManager.GetUserAsync(User).Result.FirstName @UserManager.GetUserAsync(User).Result.LastName </h4> </a>
                            </div>
                        </div>
                        <div class="card-body">
                            <div style="display:flex; align-items:center;" class="row sidebar-row">
                                <div class="col-2">
                                    <i class="fas fa-user-circle" style="font-size:35px"></i>
                                </div>

                                <div class="col-10">
                                    <a id="manage" class="nav-link" asp-area="" asp-controller="Home" asp-action="Profile"><h4>Profile </h4> </a>
                                </div>
                            </div>

                            <div style="display:flex; align-items:center;" class="row sidebar-row">
                                <div class="col-2">
                                    <i class="fas fa-newspaper" style="font-size:35px"></i>
                                </div>

                                <div class="col-10">
                                    <a id="manage" class="nav-link" asp-area="" asp-controller="Home" asp-action="Index"><h4>News </h4> </a>
                                </div>
                            </div>

                            <div style="display:flex; align-items:center" class="row sidebar-row">
                                <div class="col-2">
                                    <i class="fas fa-user-check" style="font-size:35px"></i>
                                </div>

                                <div class="col-10">
                                    <a id="manage" class="nav-link" asp-area="" asp-controller="Home" asp-action="Friends"><h4>Friends </h4> </a>
                                </div>
                            </div>

                            <div style="display:flex; align-items:center" class="row sidebar-row">
                                <div class="col-2">
                                    <i class="fas fa-comments" style="font-size:35px"></i>
                                </div>

                                <div class="col-10">
                                    <a id="manage" class="nav-link" asp-area="" asp-controller="Home" asp-action="Messages"><h4>Messages </h4> </a>
                                </div>
                            </div>

                            <div style="display:flex; align-items:center" class="row sidebar-row">
                                <div class="col-2">
                                    <i class="fas fa-users-cog" style="font-size:35px"></i>
                                </div>

                                <div class="col-10">
                                    <a id="manage" class="nav-link" asp-area="" asp-controller="Home" asp-action="Messages"><h4>Admin </h4> </a>
                                </div>
                            </div>

                            @*<div style="display:flex; align-items:center" class="row sidebar-row">
            <div class="col-2">
                <i class="fas fa-thumbs-up" style="font-size:35px"></i>
            </div>

            <div class="col-10">
                <a id="manage" class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index"><h4>Likes </h4> </a>
            </div>
        </div>*@
                        </div>
                    </div>
                </div>
                <div class="col-9" style="border-radius:10px">
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                </div>
            </div>

        }
        else
        {
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        }


    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - AdditionBonusTask - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
