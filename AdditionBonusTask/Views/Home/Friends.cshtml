                <div class="friends__list__info">
                    <a id="manage" class="nav-link" asp-area="" asp-controller="Home" asp-action="Friends" style="text-decoration:none">
                        <h5 style="color:black; font-size:15px">
                            User Userov
                        </h5>
                    </a>
                    <a id="manage" class="nav-link" asp-area="" asp-controller="Home" asp-action="Friends" style="text-decoration:none"><i class="fas fa-user-plus" style="font-size:20px"></i> Add friend</a>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <button class="btn btn-primary" style="width:100%">More...</button>
        </div>
    </div>
